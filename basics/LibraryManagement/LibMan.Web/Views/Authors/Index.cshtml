@model List<Book>

<div class="flex flex-col gap-2 w-1/2 mx-auto">
    <h1 class="text-2xl font-bold">Books Written by @ViewBag.Author</h1>
    <div class="grid grid-cols-4 gap-4 mt-8">
        @foreach (var book in Model)
        {
            <div class="flex flex-col gap-2 border border-gray-300 rounded-md p-4 shadow-md">
                <img src="@book.ImageUrl" alt="@book.Title" class="w-full h-48 object-cover rounded-md">
                <h2 class="text-2xl font-bold">@book.Title</h2>
                <p class="text-sm text-gray-500">@book.Author</p>
            </div>
        }
    </div>
    
</div>