<div class="flex flex-col w-full h-full justify-center items-center">
    
 <div class="flex flex-col max-w-4xl w-full mx-auto shadow-md p-4 rounded-md bg-white p-8">
    <h1 class="text-2xl font-bold">Login</h1>
    @if(ViewBag.Error != null)
    {
        <p class="text-red-500">@ViewBag.Error</p>
    }
    <form method="post" action="/Login" class="flex flex-col gap-4">
        <input type="text" name="Email" placeholder="Email" class="p-2 rounded-md border-2 border-gray-300" />
        <input type="password" name="Password" placeholder="Password" class="p-2 rounded-md border-2 border-gray-300" />
        <button type="submit" class="p-2 rounded-md bg-blue-500 text-white">Login</button>
</form>
</div>
